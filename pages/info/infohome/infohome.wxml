<!--pages/info/info.wxml-->

  <cu-custom bgColor="bg-gradual-blue" isBack="{{fasle}}">
    <view slot="backText">返回</view>
    <view slot="content">订单情况</view>
  </cu-custom>
<!--导航栏-->
<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index==TabCur?'text-orange cur':''}}" wx:for="{{NavGroup}}" bindtap="tabSelect" data-id="{{index}}">
      {{item.Name}}
    </view>
  </view>
</scroll-view>
<!--我发布的-->
<block wx:if="{{TabCur==0}}">
  <!--文章类卡片-->
  <view class="cu-card article no-card "  >
    <!--类型是订单类型，序号是id-->
    <view class="cu-item shadow solid-bottom" wx:for="{{Public}}" bindtap="jumpPub" data-item="{{item.type}}" data-id="{{item.id}}">
      <view class="title">
        <view class="text-cut">{{item.title}}</view>
      </view>
      <view class="content">
        <image src= "{{item.url}}" mode="aspectFill"></image>
        <view class="desc">
          <view class="text-content"> {{item.words}}</view>
          <view>
            <view class="cu-tag bg-red light sm round">
              <view wx:if="{{item.type==1}}">互助答疑</view>
              <view wx:elif="{{item.type==2}}">跑腿送餐</view>
              <view wx:elif="{{item.type==3}}">找人带饭</view>
              <view wx:elif="{{item.type==4}}">闲置交易</view>
              <view wx:else>其他</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</block>
